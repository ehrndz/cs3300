<p id="notice"><%= notice %></p>

<h1 style="text-align:center;">Projects</h1>
<br>
<table>
  <tbody>
  <div class="flexBox">
    <% @projects.each do |project| %>
      <div class="container2 containerWidth rounded">
            <h3><%= project.title %></h3>
            <%= project.description %>
            <br>
            <% if user_signed_in? %>
            <li class="button-60">
              <%= link_to 'Show', project %>
            </li>
            <% if project %>
            <li class="button-60">
              <%= link_to 'Edit', edit_project_path(project) %>
            </li>
            <li class="button-60">
              <%= link_to 'Delete', project, method: :delete, data: { confirm: 'Are you sure?' } %>
            </li>
            <%end%>
            <%end%>
      </div>
    <% end %>
    </div>
  </tbody>
</table>

<br>


